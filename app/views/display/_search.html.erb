<%= form_tag('/display/search', :method => :post) %>
<table class = "search-options">
  <tr>
    <td><%= text_field_tag :city, nil, :placeholder => 'city' %></td>
    <td><%= text_field_tag :country, nil, :placeholder => 'country' %></td>
    <td><%= 'Start date :' %><%= date_select(:deal, :start_date) %></td>
    <td><%= 'End date :' %><%= date_select(:deal, :end_date) %></td>
    <td><%= text_field_tag :guests %></td>
    <td><%= submit_tag :Search %></td>
  </tr>
</table>