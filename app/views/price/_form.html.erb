<%= form_for @price do |form| %>

<% if @price.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@price.errors.count, "error") %>prohibited this product from being saved:</h2>
        <ul>
          <% @price.errors.full_messages.each do |msg| %>
