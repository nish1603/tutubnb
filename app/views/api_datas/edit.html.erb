  <%= form_for @api_data, :url => api_data_path(@api_data.id) do |form| %>

  <% if @api_data.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@api_data.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @api_data.errors.full_messages.each do |msg| %>
