

<div class = "outer-user-info">
  
  <%= render 'form' %>

  <div class = "user-info">
    <% @visits.each do |visit| %>
      <table>
        <tr class="field">
          <td><%= "Start date:" %></td>
          <td><%= visit.start_date %></td>
        </tr>
        <tr class="field">
          <td><%= "End date:" %></td>
          <td><%= visit.end_date %></td>
        </tr>
        <tr class="field">
          <td><%= "Price:" %></td>
          <td>&#8377;<%= visit.price %></td>
        </tr>
        <tr class="field">
          <td><%= "User Name:" %></td>
          <td><%= visit.user.first_name + " " + visit.user.last_name %></td>
        </tr>
        <tr class="field">
          <td><%= "Place Name:" %></td>
          <td><%= visit.place.title %></td>
        </tr>
        <tr class="field">
          <td><%= "Email - ID of Visitor " %></td>
          <td><%= visit.user.email %></td>
        </tr>
      </table>
    <% end %>
    <% if(@visits.empty?) %>
      <%= render :text => "No visits as of now." %>
    <% end %>
  </div>
</div>