
<div class = "outer-user-info">
  
  <%= render 'form' %>

  <div class = "user-info">
    <% @requests.each do |request| %>
      <table>
        <tr class="field">
          <td><%= "start_date:" %></td>
          <td><%= request.start_date %></td>
        </tr>
        <tr class="field">
          <td><%= "end_date:" %></td>
          <td><%= request.end_date %></td>
        </tr>
        <tr class="field">
          <td><%= "price:" %></td>
          <td>&#8377;<%= request.price %></td>
        </tr>
        <tr class="field">
          <td><%= "User_name:" %></td>
          <td><%= request.user.first_name + " " + request.user.last_name %></td>
        </tr>
        <tr class="field">
          <td><%= "Place Title:" %></td>
          <td><%= request.place.title %></td>
        </tr>
        <tr class="action">
          <td><%= button_to('Accept', deal_reply_path(:accept, request.id), :method => :get) %></td>
          <td><%= button_to('Reject', deal_reply_path(:reject, request.id), :method => :get) %></td>
        </tr>
      </table>
    <% end %>
    <% if(@requests.empty?) %>
      <%= render :text => "No requests as of now." %>
    <% end %>
  </div>
</div>