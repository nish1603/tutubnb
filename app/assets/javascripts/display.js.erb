  $('img.tag_close_image').live('click', function() {
    $tag_div = $(this).parent('div').parent('div.tag_name');
    regex = new RegExp("((' '|\t)*(" + $tag_div.children('span').text() +")(' '|\t)*(,)?)");
    $('input#place_tags_string').val($('input#place_tags_string').val().replace(regex, ''));
