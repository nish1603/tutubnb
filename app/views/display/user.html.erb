<div id = "display-div">
  <table class = "display-users">
  	<% @users.each do |user| %>
   	  <tr class = "<%= cycle("odd_user_row", "even_user_row") %> selected-user" >
        <td class = "left-cell">
          <% if(@user.avatar.exists?) %>
            <%= image_tag user.avatar, :class => "user_pic", :height => '100px', :width => '95%' %>
          <% else %>
            <%= image_tag 'missing.png', :class => "user_pic", :height => '100px', :width => '95%' %>
          <% end %>
        </td>
        <td class = "mid-cell">
          <p class = "Name"><a href ="<%= user_path(user.id) %>"><%= user.first_name + " " + user.last_name %></a><p>
          <p class = "wallet"><%= user.wallet %></p>
        </td>
        <td class = "right-cell">
          <%= form_tag(user_wallet_path(user.id)) do %>
            <%= text_field_tag :amount %>
            <%= submit_tag 'Add'  %>
            <%= submit_tag 'Subtract' %>
          <% end %>
          <% if(user.admin == false) %>
            <%= link_to 'Delete', user_path(user.id), :method => :delete %>
          <% end %>
        </td>
  	  </tr>
     <% end %>
  </table>
</div>