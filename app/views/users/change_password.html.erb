<div class = "outer-user-info">
  <%= render 'form' %>

  <div class = "user-info">
      <%= form_for(@user, :url => update_password_user_path(@user.id), :method => :put) do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
        <table>
          <% if(@user.password_digest.present?) %>
            <tr class="field">
              <td><%= t('.old_password') %></td>
              <td><%= password_field_tag :old_password %></td>
            </tr>
          <% end %>
          <tr class="field">
            <td><%= t('.new_password') %></td>
            <td><%= form.password_field :password %></td>
          </tr>
          <tr class="field">
            <td><%= t('.password_confirm') %></td>
            <td><%= form.password_field :password_confirmation %></td>
          </tr>
          <tr class="actions">
            <td></td>
            <td><%= form.submit(t(".change_password")) %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>