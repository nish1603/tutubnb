<div id = "new-deal">
  <%= form_for(@deal, :url => deals_path(params[:place_id])) do |form| %>
    <table>
      <tr class="field">
        <td><%= form.label :start_date %></td>
        <td><%= form.date_select :start_date %></td>
      </tr>
      <tr class="field">
        <td><%= form.label :end_date %></td>
        <td><%= form.date_select :end_date %></td>
      </tr>
      <tr class="field">
        <td><%= form.label :guests %></td>
        <td><%= form.text_field :guests %></td>
      </tr>
      <tr class="field">
        <td><%= form.label :price %></td>
        <% if(@deal.price) %>
          <td>&#8377;<%= (@deal.price * 1.1).round(2) %></td>
        <% end %>
      </tr>
      <tr class="actions">
        <td></td>
        <td><%= form.submit 'Calculate Price' %></td>
        <td><%= form.submit 'Book Place' %></td>
      </tr>
    </table>
  <% end %>

  <% if(@division) %>
    <% @division.each do |msg| %>
      <%= msg %><br />
    <% end %>
  <% end %>
</div>