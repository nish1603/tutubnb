<% if(notice) %>
  <div class = "notice"><%= notice %></div>
<% end %> 


<div class = "login">
  <%= form_tag('validate_user') do %>
    <fieldset>
    	<legend>Log In</legend>

      <div>
    		<%= text_field_tag :email, nil, placeholder: 'Email Address' %>  
    	</div>

      <div>
    		<%= password_field_tag :password, nil, placeholder: 'Password' %>  
    	</div>

      <div>
        <%= submit_tag 'Log In' %>
      </div>

      <%= link_to 'Need an Account?', profile_signup_path %>

    </fieldset>
  <% end %>

</div>