

<div class = "login">
  <%= form_tag('validate_user', :method => :post) do %>
    <fieldset>
    	<legend>Log In</legend>

      <div>
    		<%= text_field_tag :email, nil, placeholder: t('.email_address') %>  
    	</div>

      <div>
    		<%= password_field_tag :password, nil, placeholder: t('.password') %>  
    	</div>

      <div>
        <%= submit_tag t('.log_in') %>
      </div>

      <%= link_to t('.need_an_account'), new_user_path %>
      <%= link_to t('.forgot_your_password'), forgotton_password_users_path %>
      <%= link_to 'Login with facebook', '/auth/facebook' %>
      <%= link_to 'Login with twitter', '/auth/twitter' %>
      <%= link_to 'Login with linked in', '/auth/linkedin' %>

    </fieldset>
  <% end %>

</div>