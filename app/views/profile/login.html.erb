

<div class = "login">
  <%= form_tag('validate_user') do %>
    <fieldset>
    	<legend>Log In</legend>

      <div>
    		<%= text_field_tag :email, nil, placeholder: 'Email Address' %>  
    	</div>

      <div>
    		<%= password_field_tag :password, nil, placeholder: 'Password' %>  
    	</div>

      <div>
        <%= submit_tag 'Log In' %>
      </div>

      <%= link_to 'Need an Account?', signup_profile_index_path %>
      <%= link_to 'Forgot Your Password?', forget_password_profile_index_path %>
      <%= link_to 'Login with facebook', '/auth/facebook' %>
      <%= link_to 'Login with twitter', '/auth/twitter' %>
      <%= link_to 'Login with linked in', '/auth/linkedin' %>

    </fieldset>
  <% end %>

</div>