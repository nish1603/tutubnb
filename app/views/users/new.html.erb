
<div class = "signup">

  <%= form_for @user,:url => {:action => 'create', :controller => 'users' } do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>


    <fieldset>
    	<legend>Enter your details</legend>

    	<div>
    		<%= form.text_field :first_name, placeholder: t('.first_name') %>
    	</div>

    	<div>
    		<%= form.text_field :last_name, placeholder: t('.last_name') %>
    	</div>

      <div>
    		<%= form.text_field :email, placeholder: t('.email_address') %>  
    	</div>

      <div>
    		<%= form.password_field :password, placeholder: t('.password') %>  
    	</div>

      <div>
        <%= form.password_field :password_confirmation, placeholder: t('.confirm_password') %>  
      </div>

    	<div>
    		<%= form.select :gender, User::GENDER, :locale => I18n.locale %>
    	</div>

      <div>
        <%= form.submit t('.submit') %>
      </div>

    </fieldset>
  <% end %>
</div>